.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f|
    %h2.form-signin-heading Please sign in
    = f.text_field :email, autofocus: true, placeholder: 'Email address', required: true, type: 'email', id: 'inputEmail form-control'
    = f.text_field :password, placeholder: 'Password', required: true, type: 'password', id: 'inputPassword.form-control'
    .checkbox
    - if devise_mapping.rememberable?
      = f.label :remember_me
      = f.check_box :remember_me
    = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'
  .text-center
    %p
      Not a member?
    = link_to 'Sign up now', new_user_registration_path
