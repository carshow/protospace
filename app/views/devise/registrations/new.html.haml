= provide :title, 'User registration'
= devise_error_messages!
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'container user-new' }) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            %h4 name
            = f.text_field :name, placeholder: 'name', required: true
          .user-image.col-md-2
            %button.btn.btn-primary Add image
            = f.file_field :avatar, class: 'preview_file'
        %h4 Email
        = f.email_field :email, autofocus: true, placeholder: 'E-Mail', class: 'user-email', required: true
        %h4 Password
        = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'user-password', required: true
        %h4 Password confirmation
        = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password', class: 'user-password', required: true
      .col-md-12
        %h4 Occupation
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :occupation, placeholder: 'Occupation'
        %h4 Position
        .user-name_image.row
          .user-name.col-md-12
            = f.text_field :position, placeholder: 'Position'
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: 30, rows: 3, placeholder: 'Profile'
        .row.text-center.user-btn
    = f.submit class: 'btn btn-lg btn-primary btn-block', value: 'Sign up'
