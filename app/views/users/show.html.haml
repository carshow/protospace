.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag @user.avatar, size: '64x64', class: 'media-object' if @user.avatar.present?
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @user.prototypes.count
            %i Projects
        .proto-user
          %span.degree
          =# @user.affiliation
        .row
          .col-md-6
            %h4 Profile
            = @user.profile
            %p
          .col-md-6
            %h4 Position
            = @user.position
            %p
          .col-md-6
            %h4 Occupation
            = @user.occupation
            %p
.container.proto-list
  .row
    = render @user.prototypes, partial: 'prototype/prototype'
.text-center
  %ul.pagination
    %li
      =# paginate(@prototypes)